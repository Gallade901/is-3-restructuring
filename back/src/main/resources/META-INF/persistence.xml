<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="myDb" transaction-type="JTA"> <!-- JTA |  RESOURCE_LOCAL-->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <jta-data-source>java:jboss/datasources/PostgresDS2</jta-data-source> <!-- просто PostgresDS | PostgresDS2 - local | PostgresHikariDS -->
    <class>main.back.user.model.User</class>
    <class>main.back.user.model.SessionUser</class>
    <class>main.back.user.model.ApplicationAdmin</class>
    <class>main.back.location.model.Location</class>
    <class>main.back.coordinates.model.Coordinates</class>
    <class>main.back.person.model.Person</class>
    <class>main.back.person.model.ImportHistory</class>
<!--    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>-->
    <properties>
<!--      <property name="jakarta.persistence.schema-generation.database.action" value="update"/>-->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.connection.isolation" value="8"/>
      <property name="jakarta.persistence.jdbc.isolation" value="8"/>
<!--      <property name="hibernate.default_schema" value="s367617"/> &lt;!&ndash;  public s367617 Для helios&ndash;&gt;-->

      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform"/>

      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/> <!-- /studs | postgres  --> <!--  /db - docker | localhost | pg -->
      <property name="jakarta.persistence.jdbc.user" value="postgres"/> <!-- s367617 |  postgres -->
      <property name="jakarta.persistence.jdbc.password" value="admin"/> <!-- PUczqX7P9B8Jm0af  | admin -->

<!--       HikariCP Connection Pool Settings -->
      <property name="hibernate.connection.provider_class"
                value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/> <!-- org.hibernate.hikaricp.internal.HikariCPConnectionProvider | com.zaxxer.hikari.hibernate.HikariConnectionProvider-->
      <property name="hibernate.hikari.dataSourceClassName"
                value="org.postgresql.ds.PGSimpleDataSource"/>
      <property name="hibernate.hikari.dataSource.url"
                value="jdbc:postgresql://localhost:5432/postgres"/>
      <property name="hibernate.hikari.dataSource.user" value="postgres"/>
      <property name="hibernate.hikari.dataSource.password" value="admin"/>

      <!-- HikariCP Pool Configuration -->
      <property name="hibernate.hikari.maximumPoolSize" value="20"/>
      <property name="hibernate.hikari.minimumIdle" value="5"/>
      <property name="hibernate.hikari.connectionTimeout" value="30000"/>
      <property name="hibernate.hikari.idleTimeout" value="300000"/>

<!--         L2 Cache Configuration -->
        <property name="hibernate.cache.use_second_level_cache" value="true"/>
        <property name="hibernate.cache.use_query_cache" value="true"/>
        <property name="hibernate.cache.region.factory_class"
                  value="org.infinispan.hibernate.cache.InfinispanRegionFactory"/>
        <property name="hibernate.generate_statistics" value="true"/>
        <property name="hibernate.cache.infinispan.statistics" value="true"/>

        <!-- Infinispan Configuration -->
        <property name="hibernate.cache.infinispan.entity.eviction.strategy" value="LRU"/>
        <property name="hibernate.cache.infinispan.entity.eviction.max_entries" value="1000"/>
        <property name="hibernate.cache.infinispan.entity.expiration.lifespan" value="600000"/>
        <property name="hibernate.cache.infinispan.entity.expiration.max_idle" value="300000"/>
    </properties>
  </persistence-unit>
</persistence>
